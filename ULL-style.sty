%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Packages required for the style guide
\usepackage{titlesec}
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%


% Changes the page numbers in TOC to normal font
\renewcommand{\cftchappagefont}{\normalfont}

% Changes the Chapter dots in the TOC to normal font
\renewcommand{\cftchapleader}{\cftdotfill{\cftsecdotsep}}

% Note:
% If the grad school does not like how the captions of the figures or tables is wrapped by Latex use this form to force a linebreak:
% \caption[What is displayed\newline in the TOC]{What is displayed under the Figure}
% This method will also work with the other commands in latex i.e. \chapter[]{}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Adjust spacing between number
% and title in table of contents
% \cftsetindents{title level}{indent}{spacing for number}
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\cftsetindents{chapter}{0in}{2em}
\cftsetindents{section}{0.5in}{2em}
\cftsetindents{subsection}{1in}{2.6em}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Italicize subsection headings
% in table of contents
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\renewcommand{\cftsubsecaftersnumb}{\itshape}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Places Table and Figure in front 
% for List of Figures and Tables
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\renewcommand{\cftfigpresnum}{\bfseries Figure }
\renewcommand{\cfttabpresnum}{\bfseries Table }

% Add a period after figures and tables in the \contents pages
\renewcommand{\cftfigaftersnum}{.}
\renewcommand{\cfttabaftersnum}{.}

\setlength{\cftfignumwidth}{5em}
\setlength{\cfttabnumwidth}{5em}

\setlength\parindent{0.5in}

% remove indentation from figures in lof
\setlength{\cftfigindent}{0pt}
% remove indentation from tables in lot
\setlength{\cfttabindent}{0pt}

% Ensure proper numbering of the sections and subsections
\renewcommand{\thesection}{\thechapter.\@arabic\c@section}
\renewcommand{\thesubsection}{\thesection.\@arabic\c@subsection}
\renewcommand{\thesubsubsection}{\thesubsection.\@arabic\c@subsubsection}

% command to add period after \subsubsection
\newcommand{\addperiod}[1]{#1.}

% Italicize subsection label
\titleformat{\subsection}[hang] % hang makes new paragraph after label
  {\normalfont\bfseries} % set common formating for section title and numbering
  {\thesubsection}
  {1em}
  % {\addperiod}
  {\itshape} % change format of title text only (not numbering)

% add period after subsubsection title
\titleformat{\subsubsection}[runin] % hang makes new paragraph after label
  {\normalfont\bfseries} % set common formating for section title and numbering
  {\thesubsubsection}
  {1em}
  {\addperiod} % add period

% % Change the font for the table of contents entries
% \titlecontents{subsection}
% [1in] % left margin
% {} % above code
% {\contentslabel\bfseries} % numbered entry format
% {} % unnumbered entry format
% % {\titlerule*[1pc]{.}\contentspage} % filler-page format
% {}

% Centers the TOC title
\renewcommand{\contentsname}{\hfill\bfseries\normalsize Table of Contents\hfill}   
\renewcommand{\cftaftertoctitle}{\hfill}

% adds leader dots from chapter titles to page numbers
\renewcommand\cftchapdotsep{\cftdotsep}

% Making the sections and subsections Uppercase
\makeatletter
\patchcmd{\l@section}{#1}{\bfseries #1}{}{}
\patchcmd{\l@subsection}{#1}{\bfseries #1}{}{}
\makeatother

% Gets rid of whitespace above the TOC LOF and LOT
\setlength{\cftbeforetoctitleskip}{0pt}
\setlength{\cftbeforeloftitleskip}{0pt}
\setlength{\cftbeforelottitleskip}{0pt}

\setlength{\cftfigindent}{0pt}  % remove indentation from figures in lof
\setlength{\cfttabindent}{0pt}  % remove indentation from tables in lot

\cftsetindents{figure}{0em}{5.5em}
\cftsetindents{table}{0em}{5.5em}

\setlength\cftbeforefigskip{12pt}
\setlength\cftbeforetabskip{12pt}

% Set the distance below the TOC the text will start
\setlength{\cftaftertoctitleskip}{5pt}
\setlength{\cftafterloftitleskip}{15pt}
\setlength{\cftafterlottitleskip}{15pt}

% Centers the LOF and LOT
\renewcommand{\cftlottitlefont}{\hspace*{\fill}\Huge\bfseries}
\renewcommand{\cftafterlottitle}{\hspace*{\fill}}
\renewcommand{\cftloftitlefont}{\hspace*{\fill}\Huge\bfseries}
\renewcommand{\cftafterloftitle}{\hspace*{\fill}}
% Suppresses the page numbers on everything till the second page of TOC
%\tocloftpagestyle{empty}
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Makes new command iraggedright which
% indents and left justifies 
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\makeatletter
\newcommand\iraggedright{%
  \let\\\@centercr\@rightskip\@flushglue \rightskip\@rightskip
  \leftskip\z@skip}
\makeatother
